{
  "lint": {
    "include": ["src/"],
    "exclude": ["node_modules", "build", "dist"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"]
    }
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 2,
    "semiColons": true,
    "exclude": [
      "node_modules"
    ]
  }
}
